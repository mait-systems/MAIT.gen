# Environment Variables Template
# Copy this file to .env and update with your specific values

# InfluxDB Configuration
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=mlr
INFLUXDB_BUCKET=stbd_gen
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123

# Frontend / API
REACT_APP_API_URL=http://localhost:8001
FRONTEND_PORT=3000
REACT_APP_GENERATOR_NAME=Generator

# Powertrain Agent
POWERTRAIN_INTERVAL=5
POWERTRAIN_BOOTSTRAP=false
POWERTRAIN_AI_ENABLED=false
POWERTRAIN_IDLE_TIMEOUT=5

# Gateway (remote)
GATEWAY_URL=http://your-gateway-host:8083
GATEWAY_API_KEY=your-gateway-api-key-here

# Optional (only needed if running the gateway locally)
OPENAI_API_KEY=your-openai-api-key-here
