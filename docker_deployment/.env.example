# Generator Monitoring System - Environment Configuration Template
# Copy this file to .env and update with your specific values

# =============================================================================
# InfluxDB Configuration
# =============================================================================
# InfluxDB authentication token (generate a secure token for production)
INFLUXDB_TOKEN=changeme-token

# InfluxDB organization name
INFLUXDB_ORG=default-org

# InfluxDB bucket name for storing generator data
INFLUXDB_BUCKET=default-bucket

# InfluxDB URL (for internal Docker network)
INFLUXDB_URL=http://influxdb:8086

# InfluxDB admin credentials (change for production)
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123

# =============================================================================
# OpenAI Configuration (Optional - for AI analysis features)
# =============================================================================
# OpenAI API key for GPT-4 health analysis and reporting
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Modbus Network Configuration
# =============================================================================
# IP address of your Modbus TCP gateway (e.g., Moxa NPort)
MODBUS_HOST=192.168.127.254

# Modbus TCP port (standard is 502)
MODBUS_PORT=502

# Modbus unit ID/slave address
MODBUS_UNIT_ID=1

# =============================================================================
# Application Configuration
# =============================================================================
# Frontend port (default: 3000)
FRONTEND_PORT=3000

# Backend API port (default: 8001)  
BACKEND_PORT=8001

# API Base URL for frontend
# For Docker: leave empty (uses nginx proxy)
# For network access from other devices: use http://YOUR_SERVER_IP:3000
REACT_APP_API_URL=

# Server IP address for network access (replace with your actual IP)
# Find with: hostname -I or ip addr show
SERVER_IP=192.168.1.100

# InfluxDB UI port (default: 8086)
INFLUXDB_PORT=8086

# =============================================================================
# Data Retention Configuration
# =============================================================================
# How long to retain data in InfluxDB (e.g., 30d, 6m, 1y)
DATA_RETENTION=30d

# =============================================================================
# Security Configuration (Production)
# =============================================================================
# Set to 'production' to enable security features
ENVIRONMENT=development

# Allowed origins for CORS (production should be specific domains)
CORS_ORIGINS=*

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=generator_output.log

# =============================================================================
# Generator Specific Settings
# =============================================================================
# Generator model/identifier for logging and reporting
GENERATOR_MODEL=Generic

# Location/site identifier
SITE_NAME=Generator Site

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Data polling interval in seconds
POLL_INTERVAL=2

# Maximum number of Modbus retry attempts
MODBUS_RETRIES=5

# Retry delay in seconds
MODBUS_RETRY_DELAY=0.1

# =============================================================================
# Email Notifications (Optional)
# =============================================================================
# SMTP server configuration for alert emails
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=generator-monitor@example.com
SMTP_TO=admin@example.com

# Enable email alerts (true/false)
EMAIL_ALERTS_ENABLED=false

# =============================================================================
# Advanced Configuration
# =============================================================================
# InfluxDB query timeout in milliseconds
INFLUXDB_TIMEOUT=60000

# Maximum log file size in MB
MAX_LOG_SIZE=10

# Number of log file backups to keep
LOG_BACKUP_COUNT=5
