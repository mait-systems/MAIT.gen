# Generator Monitoring System Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# INFLUXDB CONFIGURATION
# =============================================================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=your-org-name
INFLUXDB_BUCKET=generator-metrics
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123

# =============================================================================
# OPENAI CONFIGURATION (for AI analysis)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# GENERATOR/MODBUS CONFIGURATION
# =============================================================================
# These values will be overridden by generator_config.yaml
MODBUS_HOST=192.168.127.254
MODBUS_PORT=502
MODBUS_UNIT_ID=1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, production)
NODE_ENV=development

# API Base URL for frontend (leave empty for relative URLs)
REACT_APP_API_BASE=

# Backend host/port for development
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=generator_output.log

# =============================================================================
# SECURITY NOTES
# =============================================================================
# NEVER commit your actual .env file to version control!
# Keep your API keys and tokens secure
# Use different values for development vs production